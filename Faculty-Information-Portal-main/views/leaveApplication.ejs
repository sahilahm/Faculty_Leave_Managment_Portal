<!DOCTYPE html>
<%- include("partials/header1"); -%>
<center><h3>Leave Application Form</h3></center>
<div class="form-1">
  <form class="" action="/leaveApplication" method="post">
    <div class="form-group">
      <label for="postTitle">Subject</label>
      <br>
      <input type="text" class="form-control" name="subject">
    </div>
    <div class="form-group">
      <label for="start">Start Date</label>
      <br>
      <input type="date" class="form-control" name="startDate">
    </div>
    <div class="form-group">
      <label for="hiring">Number of Leave Days</label>
      <br>
      <div class="value-button" id="decrease" onclick="decreaseValue()" value="Decrease Value">-</div>
      <input type="number" class="" id="number" value="0" name="nod"/>
      <div class="value-button" id="increase" onclick="increaseValue()" value="Increase Value">+</div>
    </div>
    <div class="form-group">
      <label for="post">Post</label>
      <br>
      <textarea name="content" class="form-control" rows="19" cols="80"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" name="button" class="btn btn-primary">Send</button>
    </div>
  </form>
</div>

<%- include("partials/footer1"); -%>