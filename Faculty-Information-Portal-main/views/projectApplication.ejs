<!DOCTYPE html>
<%- include("partials/header1"); -%>

<div class="form-1">
  <form class="" action="/projectApplication" method="post">
    <center>
      <h2>Project Application</h2>
    </center>
    <div class="form-group">
      <label for="Title">Subject</label>
      <br>
      <input type="text" class="form-control" name="Title">
    </div>
    <div class="form-group">
      <input type="text" name="Pid" class="form-control" placeholder="Project ID" required autofocus>
    </div>
    <div class="form-group">
      <label for="required">Requirement</label>
      <br>
      <select class="form-control" name="type">
        <option value="" disabled selected hidden>Research fellow</option>
        <option value="JRF">JRF</option>
        <option value="SRF">SRF</option>
      </select>
    </div>
    <div class="form-group">
      <label for="hiring">Hiring(in Month)</label>
      <br>
      <div class="value-button" id="decrease" onclick="decreaseValue()" value="Decrease Value">-</div>
      <input type="number" class="" id="number" value="0" name="duration"/>
      <div class="value-button" id="increase" onclick="increaseValue()" value="Increase Value">+</div>
    </div>
    <div class="form-group">
      <label for="post">Post</label>
      <br>
      <textarea name="post" class="form-control" rows="11" cols="80"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" name="button" class="btn btn-primary">Send</button>
    </div>
  </form>
</div>

<%- include("partials/footer1"); -%>